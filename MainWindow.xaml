<Window x:Class="SHOP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SHOP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300"  WindowStartupLocation="CenterScreen">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="2.5*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>




        <TextBox x:Name="LoginTBox" FontSize="24"  Grid.ColumnSpan="2" Grid.Row="1"/>
        <TextBox x:Name="PasswordTBox" FontSize="24"  Grid.ColumnSpan="2"  Grid.Row="2"/>
        <Button Content="ВХОД" Click="Button_Enter_Press"  Grid.Row="3"/>
        <Button Content="РЕГИСТРАЦИЯ"  Click="Button_Click"  Grid.Row="4"/>
        <Button Content="ГОСТЕВОЙ ВХОД"  Click="Button_Click_1"  Grid.Row="5"/>
        <Label x:Name="AlertLabel" Content="не верный пароль"  FontSize="28" Foreground="Red" Background="Black" Opacity="0" Grid.Row="5" Grid.Column="1"/>

    </Grid>
</Window>
