<Window x:Class="SHOP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SHOP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="LoginTBox" HorizontalAlignment="Center" Margin="0,142,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="280" FontSize="24"/>
        <TextBox x:Name="PasswordTBox"  HorizontalAlignment="Center" Margin="0,183,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="280" FontSize="24"/>
        <Button Content="ВХОД" HorizontalAlignment="Left" Margin="10,222,0,0" VerticalAlignment="Top" Height="43" Width="125" Click="Button_Enter_Press"/>
        <Button Content="РЕГИСТРАЦИЯ" HorizontalAlignment="Left" Margin="10,318,0,0" VerticalAlignment="Top" Height="43" Width="125" Click="Button_Click"/>
        <Button Content="ГОСТЕВОЙ ВХОД" HorizontalAlignment="Left" Margin="10,270,0,0" VerticalAlignment="Top" Height="43" Width="125"/>
        <Label x:Name="AlertLabel" Content="не верный пароль" HorizontalAlignment="Center" Margin="0,366,0,0" VerticalAlignment="Top" FontSize="28" Foreground="Red" Background="Black" Opacity="0"/>

    </Grid>
</Window>
