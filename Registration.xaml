<Window x:Class="SHOP.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SHOP"
        mc:Ignorable="d"
        Title="Registration" Height="450" Width="300" WindowStartupLocation="CenterScreen"  >
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="2.5*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox x:Name="LoginTBox"  TextWrapping="Wrap" FontSize="24" Grid.Row="1" Grid.ColumnSpan="2"/>
        <TextBox x:Name="PasswordTBox" TextWrapping="Wrap" FontSize="24"  Grid.Row="2" Grid.ColumnSpan="2"/>
        <Button Content="НАЗАД" Click="ButtonEscape_Click" Grid.Row="3"/>
        <Button Content="ЗАРЕГИСТРИРОВАТЬСЯ"  Click="Button_Click_1"  Grid.Row="4"/>
        <Label x:Name="AlertLabel" Content="Ошибка оОшибка"  FontSize="28" Foreground="Red" Background="Black" Opacity="0"  Grid.Row="5" Grid.ColumnSpan="2" />

    </Grid>
</Window>
