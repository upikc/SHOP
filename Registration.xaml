<Window x:Class="SHOP.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SHOP"
        mc:Ignorable="d"
        Title="Registration" Height="450" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"  >
    <Grid>
        <TextBox x:Name="LoginTBox" HorizontalAlignment="Center" Margin="0,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280" FontSize="24"/>
        <TextBox x:Name="PasswordTBox" HorizontalAlignment="Center" Margin="0,183,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280" FontSize="24"/>
        <Button Content="НАЗАД" HorizontalAlignment="Left" Margin="10,222,0,0" VerticalAlignment="Top" Height="43" Width="140" Click="ButtonEscape_Click"/>
        <Button Content="ЗАРЕГИСТРИРОВАТЬСЯ" HorizontalAlignment="Left" Margin="10,270,0,0" VerticalAlignment="Top" Height="43" Width="140" Click="Button_Click_1"/>
        <Label x:Name="AlertLabel" Content="Ошибка оОшибка" HorizontalAlignment="Center" Margin="0,318,0,0" VerticalAlignment="Top" FontSize="28" Foreground="Red" Background="Black" Opacity="0"/>

    </Grid>
</Window>
